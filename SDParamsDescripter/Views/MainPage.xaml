                        </Button>
                        <TextBox IsReadOnly="True" AcceptsReturn="True" Text="{x:Bind ViewModel.Replies.Numbers, Mode=OneWay}" HorizontalAlignment="Stretch" Grid.Column="1"/>
                    </Grid>
                    <ListView ItemsSource="{x:Bind ViewModel.Prompts}" SelectionMode="None" HorizontalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:PromptReply">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Command="{Binding ViewModel.CopyTextCommand, ElementName=MainContainer}" CommandParameter="{x:Bind Contents, Mode=OneWay}" Grid.Column="0">
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe8c8;" />
                                    </Button>
                                    <TextBox IsReadOnly="True" AcceptsReturn="True" Text="{x:Bind Contents, Mode=OneWay}" Height="50" Margin="0, 5" HorizontalAlignment="Stretch" Grid.Column="1"/>
